#
# wm independent hotkeys
#

# terminal emulator
super + Return
    kitty
# program launcher
super + d
	rofi -show run

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

super + 0
    ~/dots/sxhkd/scripts/powermenu


super + g
    bspc node -g hidden=on

super + u
    unhide

super + n
    bspc desktop -f next.occupied

super + r
    bspc node @parent -R 90

# balance right part
super + e
    bspc node @/2 -B

super + s
    bspc node -n @/2

super + m
    bspc node -n @/1

super + {-, +}
    bspc node -z 

# F keys
XF86AudioRaiseVolume   
    pactl set-sink-mute 0 false && pactl set-sink-volume 0 +5% 
XF86AudioLowerVolume
    pactl set-sink-volume 0 -5%
XF86AudioMute
    pactl set-sink-mute 0 toggle
XF86AudioMicMute
    pactl set-source-mute 0 toggle
XF86MonBrightnessUp
    light -A 5
XF86MonBrightnessDown
    light -U 5


XF86AudioMicMute
    pamixer --source 1 -t

Print
    maim ~/pics/$(date +%d.%m.%y_%T).png
#
# bspwm hotkeys
#

# quit/restart bspwm
super + shift + {Escape, r}
	bspc {quit, wm -r}

# close and kill
super + q
    bspc node -c
	# kill_window

# alternate between the tiled and monocle layout
super + f
    bspc desktop -l next

# super + t
#     bsp-layout set tall

super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# super + m
#     [[ $(bspc query -N @/ -n .descendant_of.window.hidden | wc -l) -gt 0 ]]
#         && bspc node -g hidden
#
# state/flags
#

# set the window state
# /* super + f */
# /* 	bspc node -t \~fullscreen */

# set the node flags
# super + ctrl + {m,x,y,z}
# 	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the next/previous node in the current desktop
super + {_, shift + } {j, k}
    bspc node -{f,s} {next,prev}.local.!floating

# move node to master
# need to change based to where master is
super + {_, shift + } space
    mfocus {focus, swap}

# focus master
# super + m
#     bspc node -f biggest.local

# focus the node for the given path jump
#/* super + {_,shift + }{k,j,space} */
#/* 	bspc node -{f,s} @{parent,brother,first} */


# focus the next desktop in the current monitor
# super + b
# 	bspc desktop -f next.local

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# send to the given desktop
super + shift + {1-9}
    bspc node -d {1-9}

# focus given desktop
super + {1-9}
    dfocus {1-9}
	# bspc desktop -f {1-9}

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -f {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outwrd

super + {h,l}
    resize {-20, 20}

# contrct  window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
